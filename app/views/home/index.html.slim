.headline
  - if @welcome
    h1 
      = @welcome.title
    p = markdown(@welcome.body)
    - if can? :manage, TextContent
      p =link_to t('system.edit'), edit_text_content_path(@welcome)
.left-column-9
  - @product_lines.each_with_index do |product_line, index|
    - if (index % 3) == 0 
      .grid-3-alpha
        = link_to product_line.title, product_line
        br
        = link_to image_tag(product_line.image_url :medium), product_line if product_line.image?
    - elsif (index % 3) == 1
      .grid-3
        = link_to product_line.title, product_line
        br
        = link_to image_tag(product_line.image_url :medium), product_line if product_line.image?

	- elsif (index % 3) == 2
	  .grid-3-omega
	    = link_to product_line.title, product_line
	    br
	    = link_to image_tag(product_line.image_url :medium), product_line if product_line.image?
	    .divider-9
    
  

